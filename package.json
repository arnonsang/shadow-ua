{
  "name": "shadow-ua",
  "version": "1.0.0",
  "description": "A tool for generating realistic User-Agent strings for mocking, load testing, defensive security testing, and browser spoofing.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shua": "./bin/shua"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnonsang/shadow-ua.git"
  },
  "bugs": {
    "url": "https://github.com/arnonsang/shadow-ua/issues"
  },
  "homepage": "https://github.com/arnonsang/shadow-ua#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "api": "node dist/api/server.js",
    "api:dev": "tsc && node dist/api/server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "user-agent",
    "ua-generator",
    "browser-spoofing",
    "security-testing",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ]
}
